<div data-controller="demo" class="w-full h-screen sm:block flex flex-col items-center">
  <div data-demo-target="landing" class="sm:relative sm:h-3/5 w-full sm:bg-blue-500 flex flex-col items-center mb-10 sm:mb-32">
    <h1 class="px-5 text-center sm:px-0 my-5 font-bold text-blue-500 sm:text-white text-5xl">Snap & Sync Calendar</h1>
    <h3 data-demo-target="description" class="px-5 text-center sm:px-0 font-semibold text-blue-500 sm:text-white text-lg">Dites adieu aux horaires papier : prenez une photo et ajoutez-les automatiquement à votre agenda Google.</h3>
    <div data-demo-target="smartphones" class="hidden sm:flex gap-20 absolute -bottom-20">
      <%= image_tag "smartphone_1.png", class: "smartphone" %>
      <%= image_tag "smartphone_2.png", class: "smartphone" %>
      <%= image_tag "smartphone_3.png", class: "smartphone" %>
    </div>
    <%= image_tag "steps.png", data: {demo_target: "steps"}, class: "sm:hidden w-4/5 mt-10" %>
    <div data-demo-target="demo" class="relative mt-10 opacity-0 flex justify-center hidden">
      <%= image_tag "iphone.svg", class: "iphone" %>
      <video data-action="ended->demo#closeVideo" class="absolute top-1/2 left-1/2 -translate-y-1/2 -translate-x-1/2 video" autoplay muted playsinline>
        <source src="<%= asset_path 'demo.mp4' %>" type="video/mp4">
      </video>
    </div>
  </div>
  <div data-demo-target="buttons" class="flex flex-col sm:flex-row justify-center gap-10">
    <%= render "devise/shared/links" %>
    <button data-action="click->demo#showDemo" class="flex items-center justify-between w-full sm:w-fit overflow-hidden gap-2 bg-blue-500 rounded-md shadow-lg border border-solid border-blue-500 sm:hover:scale-110">
      <%= image_tag "youtube.svg", class: "flex justify-center p-3 bg-white" %>
      <div class="p-4">
        <p class="text-white text-lg font-semibold">Voir la démonstration</p>
      </div>
    </button>
  </div>
  <footer data-demo-target="footer" class="border-gray-100 py-6 sm:hidden">
    <div class="mx-auto flex max-w-7xl flex-col items-center justify-center gap-8 px-6 sm:flex-row lg:px-8">
      <p class="text-sm leading-7 text-gray-400">&copy; Powered by Kevin TCHIADEU</p>
    </div>
  </footer>
</div>
