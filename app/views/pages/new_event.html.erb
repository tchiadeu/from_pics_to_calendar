<div class="my-10">
  <h2 class="my-5 text-3xl text-center font-semibold leading-7 text-blue-500">Vérifier les heures indiquées</h2>
  <%= form_with(url: 'create_event', method: 'post', multipart: true) do |form| %>
    <% 7.times do |i| %>
      <div class="mt-3 rounded-md border-2 border-dashed border-blue-500 p-4">
        <%= form.label "#{@values[:date][i-1]} :", class: "block text-lg font-semibold text-gray-900" %>
        <%= form.hidden_field "form_values[#{i}][date]", value: @values[:date][i-1] %>
        <div class="flex w-full justify-between gap-5">
          <%= form.text_field "form_values[#{i}][start_hour]", value: @values[:start_hour][i-1], class: "w-1/2 mt-2 block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6" %>
          <%= form.text_field "form_values[#{i}][end_hour]", value: @values[:end_hour][i-1], class: "w-1/2 mt-2 block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6" %>
        </div>
      </div>
    <% end %>
    <%= form.submit "Créer les évènements", class: "w-full mt-5 text-lg rounded-md bg-blue-100 px-3.5 py-2.5 font-semibold text-blue-500 shadow-sm" %>
  <% end %>
</div>
